<%layout("/layouts/boilerplate")%>
<body>
    <div class="row">
       <div class="col-8 "> 
    <h3>create new listing</h3>
    <br>
    <form action="/listings" method="post" class="needs-validation" novalidate enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" placeholder="Title" id="title" class="form-control " required > 
            <div class="invalid-feedback">
                please enter a valid Title
            </div>
        </div>
       
        <!-- <div class="mb-3">
            <label for="image" class="form-label">Image URL</label>
            <input type="text" name="listing[image]" placeholder="Image URL" id="image" class="form-control"   >
            <div class="invalid-feedback">
                please enter a valid image URL/link
            </div>
        </div> -->
        <div class="mb-3">
            <label for="image" class="form-label">Upload Listing Image</label>
            <input type="file" name="listing[image]" id="image" class="form-control"  required >
            
        </div> 
       
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" placeholder="Description" id="description" class="form-control"  required></textarea>
            <div class="invalid-feedback">
                please enter a valid description
            </div>
        </div>
       
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input type="number" name="listing[price]" placeholder="Price" id="price" class="form-control"  required >
                <div class="invalid-feedback">
                    please enter a valid price
                </div>
            </div>
       
            <div class="mb-3 col-md-8">
                <label for="location" class="form-label">Location</label>
                <input type="text" name="listing[location]" placeholder="Location" id="location" class="form-control" required >
                <div class="invalid-feedback">
                    please enter a valid Location
                </div>
            </div>
        </div>
        
        <div class="mb-3">
            <label for="country" class="form-label">Country</label>
            <input type="text" name="listing[country]" placeholder="Country" id="country" class="form-control"  required>
            <div class="invalid-feedback">
                 please enter a valid Country
            </div>
        </div>
       
        <br><br>
        <button type="submit" class="btn btn-danger">Add</button>
    </form>

    </div>
</div>
</body>
  