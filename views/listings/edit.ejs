<%layout("/layouts/boilerplate")%>


<body>
    <div class="row">
        <div class="col-7 ">
     <h3 class="mt-3">Update listing</h3>
    <br>
    <form action="/listings/<%=listing._id%>?_method=PUT" method="post" enctype="multipart/form-data">
        <!-- listing here is like an js object with keys as title,description ,etc it will be saved as an js object in req.body -->
        <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" name="listing[title]" id="title" value="<%=listing.title%>" class="form-control" required>
        </div>

        <div class="mb-3">
            Current Listing Image <br>
            <img src="<%=originalImageUrl%>" alt="listing_image"/>
        </div>

         <div class="mb-3">
            <label for="image" class="form-label">Upload Listing Image</label>
            <input type="file" name="listing[image]" id="image" class="form-control"  >
            
        </div> 

       <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" id="description" class="form-control" required><%=listing.description%></textarea>
       </div>

        <div class="mb-3">
        <label for="price" class="form-label">Price</label>
        <input type="number" name="listing[price]" id="price" value="<%=listing.price%>" class="form-control" required>
        </div>

        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="location" class="form-label">Location</label>
                <input type="text" name="listing[location]" id="location" value="<%=listing.location%>" class="form-control"  required>
            </div>

            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input type="text" name="listing[country]" id="country" value="<%=listing.country%>" class="form-control"  required>
            </div>
        </div>
        
        <button type="submit" class="btn btn-dark mb-3">Update Listing</button>
    </form>
    </div>
    </div>
</body>
</html>