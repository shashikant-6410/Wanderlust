<%layout("/layouts/boilerplate")%>
<body>
     <h3>Update listing</h3>
    <br>
    <form action="/listings/<%=listing._id%>?_method=PUT" method="post">
        <!-- listing here is like an js object with keys as title,description ,etc it will be saved as an js object in req.body -->
        <label for="title">Title</label>
        <input type="text" name="listing[title]" id="title" value="<%=listing.title%>" required>
        <br><br>
        <label for="description">Description</label>
        <textarea name="listing[description]" id="description" required><%=listing.description%></textarea>
        <br><br>
        <label for="price">Price</label>
        <input type="number" name="listing[price]" id="price" value="<%=listing.price%>" required>
        <br><br>
        <label for="location">Location</label>
        <input type="text" name="listing[location]" id="location" value="<%=listing.location%>"  required>
        <br><br>
        <label for="country">Country</label>
        <input type="text" name="listing[country]" id="country" value="<%=listing.country%>"  required>
        <br><br>
        <button type="submit">Update Listing</button>
    </form>
</body>
</html>